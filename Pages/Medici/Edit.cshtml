@page
@model Spitalix.Pages.Medici.EditModel
@{
     ViewData["Title"] = "Editeaza Medic";
}

<br>
<h2 class="mb-3">Editeaza Medic</h2>

@if (Model.errorMessage.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }

    @if (Model.errorMessage2.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage2</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }

    @if (Model.errorMessage3.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage3</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }

    @if (Model.errorMessage4.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage4</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="row col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }

<form method="POST">
    <input type="hidden" name="id" value="@Model.medicInfo.id">

    <div class="row mb-3">
        <label class="col-form-label">Nume</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="nume" value="@Model.medicInfo.nume">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label">Prenume</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="prenume" value="@Model.medicInfo.prenume">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label">CNP</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="cnp" value="@Model.medicInfo.cnp">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label">Specializare</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="specializare" value="@Model.medicInfo.specializare">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label">Functie</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="functie" value="@Model.medicInfo.functie">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label">Sectie</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="id_sectie" value="@Model.medicInfo.id_sectie">
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-1 col-sm-1 d-grid">
            <button type="submit" class="btn btn-outline-dark">Salveaza</button>
        </div>
        <div class="col-sm-1 d-grid">
            <a class="btn btn-outline-danger" href="/" role="button">Cancel</a>
        </div>
    </div>

</form>
